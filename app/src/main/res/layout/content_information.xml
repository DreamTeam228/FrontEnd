<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_information"
        android:background="@color/textColor"
        tools:context=".Information" android:scrollbars="vertical" android:soundEffectsEnabled="true"
        android:splitMotionEvents="true">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-50dp"
            tools:layout_editor_absoluteX="-16dp" android:id="@+id/scrollView2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="70dp"
                tools:layout_editor_absoluteX="0dp" android:paddingBottom="8dp" android:paddingEnd="8dp"
                android:paddingStart="8dp" android:paddingTop="8dp">
            <ImageView
                    android:layout_width="400dp"
                    android:layout_height="222dp" app:srcCompat="@drawable/samurai" android:id="@+id/informationImage"
                    android:scaleType="centerCrop"/>
            <TextView
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/name" android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:text="Категория"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/category" android:textStyle="italic"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:text="price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/price" android:textSize="18sp"
                    android:textColor="@color/colorAccent" android:textStyle="bold"/>
            <TextView
                    android:text="Описание"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/descript_title" android:textSize="24sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Здесь будет информация о"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="viewStart" android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price" android:textColor="@color/colorPrimary"
                    app:layout_constraintHorizontal_bias="0.494"/>
            <TextView
                    android:text="Адрес и телефон"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ads_title" android:textColor="@color/colorPrimaryDark" android:textStyle="bold"
                    android:textSize="24sp"/>
            <TextView
                    android:text="Адрес"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address" android:textSize="16sp" android:textColor="@color/colorPrimary"/>
            <TextView
                    android:text="Телефон"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone" android:textSize="16sp" android:textColor="@color/colorAccent"
                    android:linksClickable="true" android:textStyle="bold" android:clickable="true"
                    android:drawableLeft="@drawable/call"/>
            <TextView
                    android:text="Cайт"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/url_title" android:textColor="@color/colorPrimaryDark" android:textStyle="bold"
                    android:textSize="24sp"/>
            <TextView
                    android:text="URL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Url" android:textSize="16sp" android:textColor="@color/colorAccent"
                    android:linksClickable="true" android:textStyle="bold" android:clickable="true"
                    android:drawableLeft="@drawable/url"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>