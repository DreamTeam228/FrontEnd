<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Search">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.59000003" app:layout_constraintHorizontal_bias="0.51"
            android:layout_marginStart="24dp" style="@android:style/Widget.Holo.Light.ScrollView"
            android:layout_marginEnd="24dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="49dp" tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="188dp"/>
            <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/search_line"
                    android:contentDescription="Search" android:fadingEdge="horizontal"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>
            <TextView
                    android:text="Категории"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/category_text"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="99dp" tools:listitem="@layout/checkbox_element"
                    android:id="@+id/category_view"
                    android:scrollbars="vertical" android:layout_weight="@android:integer/config_shortAnimTime">
            </android.support.v7.widget.RecyclerView>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>
            <TextView
                    android:text="Метро"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/metro_text"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="102dp" tools:listitem="@layout/checkbox_element"
                    android:scrollbars="vertical"
                    android:id="@+id/metro_view"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>
            <TextView
                    android:text="Максимальная цена"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/price_text"/>
            <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3"
                    android:id="@+id/price_bar"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>
            <Button
                    android:text="Найти"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/find_button"
                    style="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>