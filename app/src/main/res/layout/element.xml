<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="427dp" app:srcCompat="@drawable/samurai" android:id="@+id/photo"
            android:layout_weight="1"
            android:onClick="toInformation"/>
    <TextView
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="71dp" android:id="@+id/description" android:layout_weight="1"
            android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
</LinearLayout>