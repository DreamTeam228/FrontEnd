<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.03"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1"
            app:cardBackgroundColor="@color/textColor"
            app:cardCornerRadius="8dp" app:contentPadding="8dp" app:cardElevation="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <Space
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <ImageView
                        android:layout_height="222dp" app:srcCompat="@drawable/samurai" android:id="@+id/photo"
                        android:layout_weight="1" android:layout_width="400dp"
                        android:scaleType="centerCrop"/>
                <Space
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Цена"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:id="@+id/price" android:layout_weight="1"
                    android:textAlignment="center" android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:text="@string/description"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" android:id="@+id/description" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="24sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>